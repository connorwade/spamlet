{
    "include": ["src/**/*"],

    "compilerOptions": {
        "checkJs": true,
        "allowJs": true,
        "removeComments": true,
        "declaration": true,
        "lib": ["ESNext", "DOM"],
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "esnext",
        "emitDeclarationOnly": true,
        "outDir": "lib",
    }
}